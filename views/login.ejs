<html>
  <head><% include partials/head %></head>
  <body>
    <div class = row>
      <div class=col-4></div>
      <div class=col-5 id="form">
        <h2>Please login to your account</h2>
        <hr/>
        <form action="/login" method="post">
          <div class="form-group">
            <label for="form_username">Username : </label>
            <input class= id="form_username" type="text" name="username" />
          </div>
          <div class="form-group">
            <label for="form_password">Password : </label>
            <input id="form_password" type="password" name="password" />
          </div>
          <button class="btn btn-primary " type="submit" value="Submit">Connect</button>
        </form>
        <hr/>
        <a class="btn btn-success" href="/signup" >Create an account</a>
      </div>
      <div class=col-3></div>
    </div>
  <body>
</html>